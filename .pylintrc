[MESSAGES CONTROL]

disable = trailing-whitespace,        # In copyrights
          invalid-name,               # Short variables like 'v'
          unused-wildcard-import,     # For 'from ... import ...'
          fixme,                      # TODO/FIXME
          missing-function-docstring, # TODO
          too-many-statements,        # TODO
          unspecified-encoding,       # Rely on default UTF-8
          global-statement,           # Rely on default UTF-8
          too-many-locals, too-many-branches, too-many-boolean-expressions

[FORMAT]

indent-string = '  '
indent-after-paren = 2

[IMPORT]

allow-wildcard-with-all = yes

[TYPECHECK]

disable = bad-option-value  # consider-using-with is unsupported in some versions
